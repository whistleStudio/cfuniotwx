/* 布局 */
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mgt-20 {
  margin-top: 20rpx;
}
.mgt-50 {
  margin-top: 50rpx;
}
/* 表单样式 */
.text-plh {
  color: #d2d2d2;
}
.popup {
  width: 500rpx;
  padding: 50rpx 0;
  box-sizing: border-box;
}
.popup .pop-head {
  padding: 0 50rpx;
  height: 80rpx;
}
.popup .pop-head text {
  text-align: center;
  display: inline-block;
  font: 40rpx/70rpx "微软雅黑", "Micosoft Yahei", "Micosoft YaHei", "sans-serif";
  float: right;
}
.popup .pop-head text:first-child {
  color: white;
  background-color: lightseagreen;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.popup .pop-list {
  margin-top: 30rpx;
}
.popup .pop-list label {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  background-color: white;
  display: block;
  box-sizing: border-box;
}
.popup .pop-list label:not(:last-of-type) {
  border-bottom: 1px solid #f0f0f0;
}
.popup .pop-list label view {
  display: inline-block;
}
.popup .pop-list label view:last-child {
  margin-left: 20rpx;
}

