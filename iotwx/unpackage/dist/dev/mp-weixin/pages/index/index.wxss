/* 表单样式 */
.text-plh {
  color: #d2d2d2;
}
.content {
  height: 100vh;
}
.content .logbox {
  width: 600rpx;
  height: 750rpx;
  border: 1px solid rgba(0, 161, 233, 0.3);
  border-radius: 5px;
  position: relative;
  box-sizing: border-box;
  padding: 0 50rpx;
  color: #464646;
}
.content .logbox > image {
  width: 170rpx;
  position: absolute;
  top: 40rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.content .logbox > text {
  width: 100%;
  text-align: center;
  display: block;
  margin-top: 180rpx;
  font: 45rpx "微软雅黑", "Micosoft Yahei", "Micosoft YaHei", "sans-serif";
}
.content .logbox input {
  border: 1px solid #b4b4b4;
  border-radius: 5px;
  text-indent: 10rpx;
  font: 40rpx/50rpx;
}
.content .logbox button {
  font: 30rpx/80rpx "微软雅黑", "Micosoft Yahei", "Micosoft YaHei", "sans-serif";
  background-color: rgba(0, 161, 233, 0.6);
  color: white;
}
.btn-hover {
  background-color: #00A1E9 !important;
}

