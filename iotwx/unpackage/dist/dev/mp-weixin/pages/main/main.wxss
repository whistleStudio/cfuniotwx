.profile {
  flex-direction: column;
  width: 100%;
  height: 350rpx;
  margin-top: 20rpx;
}
.profile view {
  width: 220rpx;
  height: 220rpx;
  box-sizing: border-box;
  border: 1px solid gainsboro;
  border-radius: 50%;
  background: center/cover no-repeat;
}
.profile text {
  margin-top: 20rpx;
  font: 35rpx "微软雅黑", "Micosoft Yahei", "Micosoft YaHei", "sans-serif";
}
.info {
  margin: 0 auto;
  width: 580rpx;
  height: 660rpx;
}
.info ._ul {
  width: 100%;
  height: 100%;
  flex-direction: column;
}
.info ._ul ._li {
  display: flex;
  align-items: center;
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
  background-image: linear-gradient(135deg, #85f7f4, #00A1E9);
  box-shadow: 1px 1px 2px 1px gainsboro;
  color: white;
}
.info ._ul ._li:not(:last-of-type) {
  margin-bottom: 20rpx;
}
.info ._ul ._li .left {
  margin-left: 10rpx;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
}
.info ._ul ._li .left text {
  line-height: 120rpx;
  font-size: 100rpx;
}
.info ._ul ._li .right {
  width: 350rpx;
  margin-left: 50rpx;
  font: 35rpx "微软雅黑", "Micosoft Yahei", "Micosoft YaHei", "sans-serif";
}
.info ._ul ._li .right text:last-child {
  float: right;
}

